<%- include ('partials/header') %>

<div class="ui segment container main">
    
<div class="ui huge header">Edit Blog</div>

<form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
    <div class="field">
        <label>Title</label>
        <input type="text" name="title" value="<%= blog.title%>" required>
    </div>
    <div class="field">
        <label>Image url</label>
        <input type="text" name="image" value="<%= blog.image%>">
    </div>
    <div class="field">
        <label>Description</label>
        <textarea name="desc"><%= blog.desc%></textarea>
    </div>
    <button class="ui big teal basic button" type="submit">Update</button>
</form>
</div>

<%- include ('partials/footer') %>