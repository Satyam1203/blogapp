<% include partials/header %>

<div class="ui main container header">
    <h1>All blogs </h1>
</div>

<div class="ui">
<% blogs.forEach((blog)=>{%>
    <div class="ui">
        <div class="ui image">
            <img src="<%= blog.image%>"> 
        </div>
        <div class="ui header">
            <a href="/blogs/<%= blog._id%>"><%= blog.title%></a>
        </div>
        <div class="ui content">
            <span><%= blog.added.toDateString()%></span>
        </div>
        <div>
            <p><%- blog.desc.substring(0,100)%>...</p> 
        </div>
        
        <a href="/blogs/<%= blog._id%>">More...</a>
    </div>
<% })%>
</div>

<% include partials/footer %>